---
import Container from "../shared/Container.astro";
import FooterNav from "../shared/FooterNav.astro";
import Paragraph from "../shared/Paragraph.astro";

// --- START: New Service Data based on user request ---
const servicesNav = [
  { itemText: "Desarrollo de Páginas Web", itemLink: "#services" },
  { itemText: "Diseño de Sistemas Administrativos", itemLink: "#services" },
  { itemText: "Automatización de procesos administrativos", itemLink: "#services" },
];
// --- END: New Service Data ---

// --- Contact Information (Hardcoded for this component) ---
const contactInfo = {
    email: "soluciones@biesal.com",
    address: "San Roque, Barva, Heredia, 40204, Costa Rica", // Added city/country for completeness
}
// Define social links for icons (using your existing SVGs)
const socialLinks = [
  { icon: "Facebook", href: "#" },
  { icon: "LinkedIn", href: "#" },
  { icon: "Whatsapp", href: "https://wa.me/50600000000?text=Hola%2C%20me%20gustar%C3%ADa%20obtener%20m%C3%A1s%20informaci%C3%B3n%20sobre%20sus%20servicios" },
];
---

<footer
  class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 dark:to-transparent pt-20 rounded-t-3xl"
>
  <div class="absolute inset-0 opacity-10 dark:opacity-5">
    <div
      class="w-3/4 h-3/4 bg-primary/20 dark:bg-primary/5 rounded-full blur-3xl mx-auto my-auto"
    >
    </div>
  </div>

  <Container className="pb-10 relative z-10">

    <!-- Main Grid: Three distinct columns for content (responsive to 1 column on mobile) -->
    <div
      class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-12"
    >

        <!-- COLUMN 1: Contact Information (Comunícate) - Full width on mobile, 1/3 on tablet+ -->
        <div class="col-span-1">
          <!-- Logo -->
            <div class="min-w-max inline-flex relative mb-4">
                <a href="#" class="relative flex items-center gap-3">
                    <!-- Logo Icon/Symbol (Retained original complex icon) -->
                    <div class="relative w-4 h-4 flex rounded-sm">
                        <span
                        class="absolute -top-[2px] -right-[2px] w-2 h-2 bg-gradient-to-br from-amber-400 to-orange-500 rounded-sm rotate-45 shadow-[0_0_5px_1px] shadow-amber-400/80"
                        ></span>
                        <span
                        class="absolute -bottom-[2px] -right-[2px] w-2 h-2 bg-gradient-to-br from-amber-300 to-yellow-500 rounded-sm rotate-45 shadow-[0_0_5px_1px] shadow-yellow-400/70"
                        ></span>
                        <span
                        class="absolute -bottom-[2px] -left-[2px] w-2 h-2 bg-gradient-to-tr from-amber-400 to-orange-600 rounded-sm rotate-45 shadow-[0_0_5px_1px] shadow-orange-500/70"
                        ></span>
                        <span
                        class="absolute inset-0 m-auto w-1 h-1 rounded-full bg-gradient-to-r from-amber-200 to-yellow-100 shadow-[0_0_8px_3px] shadow-amber-300 opacity-90 animate-ping"
                        ></span>
                        <span
                        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-1 h-1 rounded-full bg-white shadow-md shadow-white/80"
                        ></span>
                    </div>

                    <!-- Logo Text -->
                    <div class="inline-flex text-2xl font-bold text-heading-1">
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 via-primary to-green-600"
                            >BIESAL</span
                        >
                    </div>
                </a>
            </div>
            <ul class="space-y-3 text-gray-700 dark:text-gray-400 text-base">
                <li class="flex flex-col">
                    <span class="font-medium text-heading-3">Email:</span>
                    <a href={`mailto:${contactInfo.email}`} class="hover:text-primary transition">{contactInfo.email}</a>
                </li>
                <li class="flex flex-col">
                    <span class="font-medium text-heading-3">Dirección:</span>
                    <span>{contactInfo.address}</span>
                </li>
            </ul>
        </div>


        <!-- COLUMN 2: Brand, Description (Somos BIESAL) & Social Links - Full width on mobile, 1/3 on tablet+ -->
        <div class="col-span-1 md:col-span-2 lg:col-span-2 flex flex-col">
            

            <!-- Description (Somos BIESAL) -->
            <h3 class="text-xl font-semibold mt-4 mb-3 text-heading-1 dark:text-white">Somos BIESAL</h3>
            <Paragraph className="text-gray-700 dark:text-gray-400 max-w-lg mb-8">
                 Nuestro equipo transforma tus ideas en realidades digitales,
                garantizando calidad, rendimiento y escalabilidad.
            </Paragraph>

            <!-- Social Links -->
            <div class="flex items-center gap-4 text-gray-500 dark:text-gray-400 mt-auto">
                {
                    socialLinks.map((link) => (
                   <a href={link.href} class="transition hover:text-primary hover:scale-110" aria-label={`Link to ${link.icon}`}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    fill="currentColor"
    class="w-6 h-6"
    viewBox="0 0 16 16"
  >
    <!-- Facebook -->
    {link.icon === 'Facebook' && (
      <path d="M15.12 0H.88A.88.88 0 0 0 0 .88v14.24c0 .486.394.88.88.88h7.633v-5.54H6.293V7.703h2.22V5.772c0-2.203 1.346-3.407 3.313-3.407.943 0 1.753.07 1.988.102v2.302h-1.364c-1.07 0-1.277.51-1.277 1.257v1.647h2.54l-.33 2.566h-2.21V16h4.33a.88.88 0 0 0 .88-.88V.88a.88.88 0 0 0-.88-.88z" />
    )}

    <!-- LinkedIn (already perfect on 0–16) -->
    {link.icon === 'LinkedIn' && (
      <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z" />
    )}

    <!-- WhatsApp – rescaled & centered to 0–16 -->
    {link.icon === 'Whatsapp' && (
      <path d="M13.6 2.4C12.2 1 10.3.5 8.2.5 4.2.5.9 3.8.9 7.8c0 1.4.4 2.7 1 3.9L1 15.5l4-1c1.1.6 2.4.9 3.7.9 4.1 0 7.4-3.3 7.4-7.4 0-2-1-3.9-2.5-5.3zm-5.4 11.3c-1.2 0-2.3-.3-3.3-.9l-.2-.1-2.1.4.4-2-.2-.3c-.6-.9-1-2-1-3.1 0-3.3 2.7-6 6-6 1.6 0 3 .6 4.1 1.6 1.1 1.1 1.7 2.5 1.7 4.1 0 3.3-2.7 6-6 6zm3.3-4.5c-.2-.1-1.2-.6-1.4-.7-.2-.1-.3-.1-.5.1-.2.2-.5.7-.6.8-.1.1-.2.1-.4.0-.2-.1-.9-.3-1.7-1-.3-.2-.5-.4-.6-.7-.1-.3.1-.5.2-.7.1-.1.2-.3.3-.5.1-.2.1-.3.1-.5 0-.2-.4-1.1-.6-1.5-.2-.4-.3-.3-.5-.3-.1 0-.3 0-.4 0-.1 0-.4.1-.5.3-.2.2-.7.8-.7 1.9 0 .6 0 1.2.2 1.6.2.4 1.2 1.9 2.9 2.6.4.2.8.3 1.1.4.4.1.8.1 1.1.1.3 0 1.2-.5 1.4-.9.2-.3.2-.6.1-.8-.1-.2-.2-.3-.4-.4z" />
    )}

    <!-- Twitter / X (your original one – already perfect) -->
    {link.icon === 'Twitter' && (
      <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
    )}
  </svg>
  <span class="sr-only">{link.icon}</span>
</a>
                    ))
                }
            </div>
        </div>

        <!-- COLUMN 3: Services Navigation -->
        <div class="col-span-1">
            <FooterNav title={"Servicios"} navItems={servicesNav} />
        </div>
    </div>
  </Container>

  <!-- Copyright Bar -->
  <div class="bg-gray-200 dark:bg-gray-800 py-4 relative z-10">
    <Container>
      <div
        class="flex justify-center md:justify-start items-center text-sm text-gray-600 dark:text-gray-400"
      >
        <div>
          &copy; <span id="year">{new Date().getFullYear()}</span>
          <span
            class="font-semibold text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 via-primary to-green-600"
            >BIESAL</span
          >. Todos los derechos reservados.
        </div>
      </div>
    </Container>
  </div>
</footer>