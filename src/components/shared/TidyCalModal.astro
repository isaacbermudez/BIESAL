---
// Define las propiedades que recibirá el componente
const { id = "tidycal-modal", title = "Agenda tu Reunión Virtual", path = "biesal/cotizacion" } = Astro.props;
// Definimos el ID del panel del modal aquí para usarlo en el script y en el HTML
const panelId = `${id}-panel`; 

// Definimos la llamada de cierre como una variable para el binding en el botón
// Esto asegura que el ID se pase correctamente al string de JavaScript.
const closeCall = `closeModal('${id}')`; 
---

<div id={id} class="fixed inset-0 z-[100] hidden transition-all duration-300" aria-modal="true" role="dialog" aria-labelledby={`${id}-title`}>
    
    <div class="absolute inset-0 bg-black bg-opacity-75 transition-opacity duration-300"></div>

    <div class="relative w-full h-full p-4 md:p-8 flex justify-center items-center overflow-y-auto">
        
        <div 
            id={panelId} 
            class="bg-white dark:bg-[#1f2937] rounded-xl shadow-2xl p-6 md:p-8 w-full max-w-5xl mx-auto my-auto transform transition-transform duration-300 scale-95"
        >
            
            <div class="flex justify-between items-center pb-4 border-b border-gray-100 dark:border-gray-700">
                <h3 id={`${id}-title`} class="text-2xl font-extrabold text-gray-900 dark:text-white">
                    {title}
                </h3>
                
                <button 
                    type="button" 
                    class="p-1 rounded-full text-gray-400 hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-700 dark:hover:text-gray-300 transition" 
                    onclick={closeCall} 
                    aria-label="Cerrar"
                >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>

            <div class="mt-6 tidycal-container">
                <div 
                    class="tidycal-embed w-full" 
                    data-path={path}
                ></div>
            </div>

        </div>
    </div>
</div>

<script define:vars={{ id, panelId, path }}>
    // --- LÓGICA DE CONTROL DEL MODAL ---
    const modal = document.getElementById(id);
    const panel = document.getElementById(panelId);
    
    if (modal && panel) {
        // Funciones de animación (mantenidas)
        function applyOpenStyles() {
            modal.classList.remove('hidden');
            document.body.classList.add('overflow-hidden');
            requestAnimationFrame(() => {
                modal.style.opacity = '1';
                panel.classList.remove('scale-95');
            });
        }
        
        function applyCloseStyles() {
            modal.style.opacity = '0';
            panel.classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
                document.body.classList.remove('overflow-hidden');
            }, 300);
        }

        // Exportamos las funciones de apertura/cierre
        window.openModal = function(modalId) {
             if (modalId === id) applyOpenStyles();
        }

        window.closeModal = function(modalId) {
            if (modalId === id) applyCloseStyles();
        }

        // --- FUNCIONALIDAD DE CERRAR AL HACER CLIC FUERA (Mantenida) ---
        modal.addEventListener('click', (event) => {
            // Verifica que el clic NO haya ocurrido dentro del panel de contenido
            // Y que el clic haya sido en el contenedor principal o el overlay
            if (!panel.contains(event.target) && event.target !== panel && event.target === modal) {
                window.closeModal(id);
            }
        });

        // Cierra al presionar la tecla ESC (Mantenida)
        document.addEventListener('keydown', (event) => {
            if (event.key === 'Escape' && !modal.classList.contains('hidden')) {
                window.closeModal(id);
            }
        });
    }


    // --- CARGA DEL SCRIPT TIDYCAL ---
    const scriptUrl = 'https://asset-tidycal.b-cdn.net/js/embed.js';
    if (!document.querySelector(`script[src="${scriptUrl}"]`)) {
        const script = document.createElement('script');
        script.src = scriptUrl;
        script.async = true;
        document.body.appendChild(script);
    }
</script>