---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import { services } from "../../utils/data";
import ContactButton from "../shared/ContactButton.astro";

// Define your image paths here
const adminSystemImg = "/images/SistemaGIF.gif";
const webPageImg1 = "/images/screenshot-web1.png";
const webPageImg2 = "/images/screenshot-web2.png";
---

<section id="services">
  <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12">
    <div class="flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col">
      <Title> Ecosistema Digital Integrado </Title>

      <Paragraph className="mt-8 mb-10">
        En <span
          class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"
          ><strong>BIESAL</strong></span
        >, nuestra propuesta es simple: conectar su gestión interna con su
        presencia digital. Esto elimina la brecha operativa, asegura la
        eficiencia y garantiza un crecimiento sostenido para su empresa.
      </Paragraph>

      <div class="grid gap-8 sm:grid-cols-2">
        {
          services.map((service) => (
            <div class="p-6 rounded-xl border border-box-border bg-box-bg shadow-xl flex flex-col h-full justify-center items-center">
              <h3 class="text-xl font-bold text-primary border-b border-primary/20 pb-3 flex items-center gap-3">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-orange-400">
                  {service.title}
                </span>
              </h3>

              <Paragraph
                className="mt-3 flex-grow text-sm"
                set:html={service.description}
              />

              <div class={`mt-4 p-3 border-l-4 ${service.border} bg-box-bg/50`}>
                <p class="text-sm font-semibold text-heading-3/80 uppercase">
                  Inversión Base
                </p>
                <p class="text-2xl font-extrabold mt-1">
                  <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-orange-400">
                    A partir de $300 USD
                  </span>
                </p>
              </div>

              {service.title === "SISTEMA ADMINISTRATIVO" && (
                <div class="relative group aspect-[4/3] w-full overflow-hidden rounded-xl border border-box-border bg-box-bg shadow-lg transition-transform hover:-translate-y-1 hover:shadow-2xl">
                  <div class="absolute top-0 z-20 flex w-full items-center gap-1.5 bg-gray-900/95 px-3 py-3 backdrop-blur">
                    <div class="h-2.5 w-2.5 rounded-full bg-red-500" />
                    <div class="h-2.5 w-2.5 rounded-full bg-yellow-500" />
                    <div class="h-2.5 w-2.5 rounded-full bg-green-500" />
                    <div class="ml-2 text-[10px] text-gray-400 font-mono">
                      sistema-admin.app
                    </div>
                  </div>

                  <button
                    id="open-modal-btn"
                    class="absolute inset-0 z-30 flex items-center justify-center bg-black/40 opacity-0 transition-opacity duration-300 group-hover:opacity-100 cursor-pointer"
                    aria-label="Ver imagen completa"
                  >
                    <span class="flex items-center gap-2 rounded-full bg-white px-4 py-2 text-sm font-bold text-black shadow-lg transform scale-95 transition-transform group-hover:scale-100 hover:bg-gray-100 pointer-events-none">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="pointer-events-none"
                      >
                        <path d="m21 21-6-6" class="pointer-events-none" />
                        <path d="M8 7h3v3" class="pointer-events-none" />
                        <path d="M7 8v3H4" class="pointer-events-none" />
                        <path d="M8 17h3v-3" class="pointer-events-none" />
                        <path d="M7 16v-3H4" class="pointer-events-none" />
                        <circle
                          cx="10"
                          cy="10"
                          r="7"
                          class="pointer-events-none"
                        />
                        <line
                          x1="21"
                          y1="21"
                          x2="15"
                          y2="15"
                          class="pointer-events-none"
                        />
                      </svg>
                      Ver Pantalla Completa
                    </span>
                  </button>

                  <div class="absolute mt-10 w-full overflow-hidden bg-gray-100">
                    <img
                      src={adminSystemImg}
                      alt="Interfaz del Sistema Administrativo"
                      class="w-full h-full object-contain object-top"
                    />
                  </div>

                  <div class="absolute bottom-0 z-20 w-full bg-gradient-to-t from-black/80 to-transparent p-4 pt-10 pointer-events-none">
                    <p class="text-sm font-bold text-white">
                      Sistema Administrativo
                    </p>
                  </div>
                </div>
              )}

              {service.title === "PÁGINA WEB" && (
                <div class="w-full space-y-4">
                  <div class="relative aspect-[4/3] w-full">
                    {/* Preview 1 */}
                    <div
                      class="preview-page relative group aspect-[4/3] w-full overflow-hidden rounded-xl border border-box-border bg-box-bg shadow-lg transition-transform"
                      data-preview="davidsalazar"
                    >
                      <div class="absolute top-0 z-10 flex w-full items-center gap-1.5 bg-gray-900/95 px-3 py-3 backdrop-blur">
                        <div class="h-2.5 w-2.5 rounded-full bg-red-500" />
                        <div class="h-2.5 w-2.5 rounded-full bg-yellow-500" />
                        <div class="h-2.5 w-2.5 rounded-full bg-green-500" />
                        <div class="ml-2 text-[10px] text-gray-400 font-mono">
                          davidsalazarservicios.com
                        </div>
                      </div>
                      <div class="absolute top-10 bottom-0 w-full overflow-hidden bg-gray-100">
                        <img
                          src={webPageImg1}
                          alt="Diseño Web 1"
                          class="w-full h-auto object-cover transition-transform duration-[6000ms] ease-linear"
                          style="transform: translateY(0);"
                          onmouseover="this.style.transform='translateY(calc(-100% + 180px))'"
                          onmouseout="this.style.transform='translateY(0)'"
                        />
                      </div>
                      <div class="absolute bottom-0 w-full bg-gradient-to-t from-black/80 to-transparent p-4 pt-10">
                        <p class="text-sm font-bold text-white">Página Web</p>
                      </div>
                    </div>

                    {/* Preview 2 */}
                    <div
                      class="preview-page relative group aspect-[4/3] w-full overflow-hidden rounded-xl border border-box-border bg-box-bg shadow-lg transition-transform hidden"
                      data-preview="efrata"
                    >
                      <div class="absolute top-0 z-10 flex w-full items-center gap-1.5 bg-gray-900/95 px-3 py-3 backdrop-blur">
                        <div class="h-2.5 w-2.5 rounded-full bg-red-500" />
                        <div class="h-2.5 w-2.5 rounded-full bg-yellow-500" />
                        <div class="h-2.5 w-2.5 rounded-full bg-green-500" />
                        <div class="ml-2 text-[10px] text-gray-400 font-mono">
                          efratacr.com
                        </div>
                      </div>
                      <div class="absolute top-10 bottom-0 w-full overflow-hidden bg-gray-100">
                        <img
                          src={webPageImg2}
                          alt="Diseño Web 2"
                          class="w-full h-auto object-cover transition-transform duration-[6000ms] ease-linear"
                          style="transform: translateY(0);"
                          onmouseover="this.style.transform='translateY(calc(-100% + 180px))'"
                          onmouseout="this.style.transform='translateY(0)'"
                        />
                      </div>
                      <div class="absolute bottom-0 w-full bg-gradient-to-t from-black/80 to-transparent p-4 pt-10">
                        <p class="text-sm font-bold text-white">Página Web</p>
                      </div>
                    </div>

                    {/* Floating Page Selector - Enhanced UX */}
                    <div class="absolute bottom-4 left-1/2 -translate-x-1/2 z-20 flex items-center gap-2 bg-gray-900/90 backdrop-blur-md px-4 py-2.5 rounded-full border border-gray-700/50 shadow-2xl hover:shadow-primary/20 transition-all duration-300 group">
                      <button
                        type="button"
                        class="relative w-3 h-3 rounded-full transition-all duration-300 cursor-pointer hover:scale-110 data-[active=true]:w-8 data-[active=true]:bg-primary data-[active=true]:shadow-lg data-[active=true]:shadow-primary/50 data-[active=false]:bg-gray-500 data-[active=false]:hover:bg-gray-400"
                        data-page-selector="davidsalazar"
                        data-active="true"
                        title="davidsalazarservicios.com"
                        aria-label="View David Salazar website"
                      >
                        <span class="sr-only">davidsalazarservicios.com</span>
                      </button>
                      <button
                        type="button"
                        class="relative w-3 h-3 rounded-full transition-all duration-300 cursor-pointer hover:scale-110 data-[active=true]:w-8 data-[active=true]:bg-primary data-[active=true]:shadow-lg data-[active=true]:shadow-primary/50 data-[active=false]:bg-gray-500 data-[active=false]:hover:bg-gray-400"
                        data-page-selector="efrata"
                        data-active="false"
                        title="efratacr.com"
                        aria-label="View Efrata website"
                      >
                        <span class="sr-only">efratacr.com</span>
                      </button>
                    </div>

                    {/* Optional: Tooltip on hover */}
                    <div class="absolute bottom-16 left-1/2 -translate-x-1/2 z-20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                      <div class="bg-gray-900 text-white text-xs px-3 py-1.5 rounded-lg shadow-xl border border-gray-700 whitespace-nowrap">
                        Click to switch preview
                      </div>
                    </div>
                  </div>
                </div>
              )}

              <ul class="mt-4 space-y-2 text-heading-3 font-medium text-sm">
                {service.features.map((feature) => (
                  <li>
                    <span
                      class={`font-bold bg-box-bg rounded-full w-5 h-5 mr-2 ${service.color} inline-flex justify-center items-center text-xs`}
                    >
                      &checkmark;
                    </span>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href={`https://wa.me/50687963720?text=${encodeURIComponent("Hola, me gustaría tener más información sobre el producto " + service.title + ".")}`}
                target="_blank"
                rel="noopener
          noreferrer"
                class="block mt-6"
              >
                <ContactButton text="Solicítalo" icon="whatsapp" />
              </a>
            </div>
          ))
        }
      </div>

      <div
        class="mt-10 p-6 bg-primary/10 rounded-lg border border-primary/50 shadow-xl"
      >
        <p
          class="text-lg font-bold text-heading-1 flex items-center justify-center gap-2"
        >
          Recomendación Estratégica
        </p>
        <Paragraph className="mt-2 text-base">
          La verdadera ventaja de <span
            class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"
            ><strong>BIESAL</strong></span
          > radica en la sinergia de ambos productos. La inversión inicial en el
          ecosistema completo (Web + Sistema) comienza en solo
          <strong class="text-2xl font-extrabold">
            <span
              class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-orange-400"
            >
              $600 USD
            </span>
          </strong>.
        </Paragraph>
        <Paragraph className="mt-4 text-sm italic text-heading-3/80">
          Esta base le permite un crecimiento modular progresivo, expandiendo su
          plataforma con Inventario, Proformas, Módulos de Clientes, entre
          otros, y asegurando así la escalabilidad tecnológica.
        </Paragraph>

        <a
          href={`https://wa.me/50687963720?text=${encodeURIComponent("Hola, me gustaría tener más información sobre ambos productos como solución integrada.")}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block mt-4"
        >
          <ContactButton text="Solicítalo" icon="whatsapp" />
        </a>
      </div>
    </div>
  </Container>

  <div id="image-modal" class="fixed inset-0 z-[100] hidden">
    <div
      class="absolute inset-0 bg-black/90 backdrop-blur-sm transition-opacity"
      id="modal-backdrop"
    >
    </div>

    <div
      class="relative flex h-full w-full items-center justify-center p-4 md:p-10"
    >
      <button
        id="close-modal-btn"
        class="absolute right-4 top-4 z-50 rounded-full bg-white/10 p-2 text-white hover:bg-white/20"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><line x1="18" y1="6" x2="6" y2="18"></line><line
            x1="6"
            y1="6"
            x2="18"
            y2="18"></line></svg
        >
      </button>

      <div
        class="max-h-full max-w-5xl overflow-y-auto rounded-lg shadow-2xl scrollbar-hide"
      >
        <img
          src={adminSystemImg}
          alt="Full Size Sistema Administrativo"
          class="w-full h-auto"
        />
      </div>
    </div>
  </div>

  {/* Script para cambiar la preview según el botón */}
  <script>
    if (typeof window !== "undefined") {
      window.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll("[data-page-selector]");
        const previews = document.querySelectorAll(".preview-page");

        buttons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.getAttribute("data-page-selector");

            // actualizar estado visual de botones
            buttons.forEach((b) => b.setAttribute("data-active", "false"));
            btn.setAttribute("data-active", "true");

            // mostrar solo el preview seleccionado
            previews.forEach((preview) => {
              const key = preview.getAttribute("data-preview");
              if (key === target) {
                preview.classList.remove("hidden");
              } else {
                preview.classList.add("hidden");
              }
            });
          });
        });
      });
    }
  </script>

  {/* Script para el modal de imagen */}
  <script>
    const modal = document.getElementById("image-modal");
    const openBtn = document.getElementById("open-modal-btn");
    const closeBtn = document.getElementById("close-modal-btn");
    const backdrop = document.getElementById("modal-backdrop");
    const whatsappButton = document.querySelector(".whatsapp-button-wrapper");

    function openModal() {
      if (modal) {
        modal.classList.remove("hidden");
        document.body.style.overflow = "hidden";

        // Hide WhatsApp button when modal opens
        if (whatsappButton) {
          whatsappButton.style.display = "none";
        }
      }
    }

    function closeModal() {
      if (modal) {
        modal.classList.add("hidden");
        document.body.style.overflow = "";

        // Show WhatsApp button when modal closes
        if (whatsappButton) {
          whatsappButton.style.display = "block";
        }
      }
    }

    if (openBtn) openBtn.addEventListener("click", openModal);
    if (closeBtn) closeBtn.addEventListener("click", closeModal);
    if (backdrop) backdrop.addEventListener("click", closeModal);

    // Cerrar al presionar la tecla Escape
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal && !modal.classList.contains("hidden")) {
        closeModal();
      }
    });
  </script>

  <style>
    /* Estilo para ocultar la barra de scroll en el modal sin afectar la funcionalidad */
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }
    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>
</section>
